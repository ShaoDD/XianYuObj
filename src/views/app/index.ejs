<div class="body2">
    <h1>加班日期计算</h1>
    <div>
        <input class="day" id="day1" value='0' type="tel" readonly>天
        <input class="hour" id="hour1" value='0' type="tel" readonly>小时
        <input class="min" id="min1" value='0' type="tel" readonly>分钟
    </div>
    +
    <div>
        <input class="day" type="tel" id="day2">天
        <input class="hour" type="tel" id="hour2">小时
        <input class="min" type="tel" id="min2">分钟
    </div>

    <input class="day" id="day3" type="hidden" value="0">
    <input class="hour" id="hour3" type="hidden" value="0">
    <input class="min" id="min3" type="hidden" value="0">

    <button style="margin-top: 40px;" class="add-btn">确认相加</button>
    <button style="margin-top: 40px; margin-left: 80px;" class="clear-btn">清除</button>
    <button style="margin-top: 40px; margin-left: 80px;" class="return-btn">返回上一步</button>
